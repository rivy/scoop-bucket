	"bin": [
		"python.exe",
		"pythonw.exe",
		["python.exe", "py"],
		["pythonw.exe", "pyw"],
		// [ "python.exe", "python3" ],
		// [ "pythonw.exe", "pythonw3" ],
		"Lib\\idlelib\\idle.bat",
		["Lib\\idlelib\\idle.bat", "idle3"]
	],
